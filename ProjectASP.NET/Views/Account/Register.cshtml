@model ProjectASP.NET.Models.RegisterModel

<div class="row m-5">
    <div class="col-lg-12">
        <h2>Registration</h2>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col col-lg-3 pl-0">
                <label asp-for="Name">Name</label>
                @*<span asp-validation-for="Username" class="text-danger"></span>*@
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="col col-lg-3 pl-0">
                <label asp-for="Surname">Surname</label>
                @*<span asp-validation-for="Username" class="text-danger"></span>*@
                <input class="form-control" asp-for="Surname" />
            </div>
            <div class="col col-lg-3 pl-0">
                <label asp-for="BirthDate">Birth date</label>
                @*<span asp-validation-for="Username" class="text-danger"></span>*@
                <input class="form-control" asp-for="BirthDate" />
            </div>
            <div class="col col-lg-3 pl-0">
                <label asp-for="Phone">Phone number</label>
                @*<span asp-validation-for="Username" class="text-danger"></span>*@
                <input class="form-control" asp-for="Phone" />
            </div>
            <div class="col col-lg-3 pl-0">
                <label asp-for="Username">Login</label>
                @*<span asp-validation-for="Username" class="text-danger"></span>*@
                <input class="form-control" asp-for="Username" />
            </div>
            <div class="col col-lg-3 pl-0 mt-1">
                <label asp-for="Email">Email</label>
                @*<span asp-validation-for="Email" class="text-danger"></span>*@
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="col col-lg-3 pl-0 mt-1">
                <label asp-for="Password">Password</label>
                @*<span asp-validation-for="Password" class="text-danger"></span>*@
                <input class="form-control" asp-for="Password" />
            </div>
            <div class="col col-lg-3 pl-0 mt-1">
                <label asp-for="ConfirmPass">Confirm password</label>
                @*<span asp-validation-for="ConfirmPass" class="text-danger"></span>*@
                <input class="form-control" asp-for="ConfirmPass" />
            </div>
            <div class="col col-lg-3 pl-0 mt-2">
                <button class="btn btn-primary" type="submit">Register</button>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>