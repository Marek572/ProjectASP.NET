@model ProjectASP.NET.Models.UserModel

@{ }

<div class="container-fluid" m-3>
    <h2>Register</h2>
    <form asp-controller="User" asp-action="Add" method="post">
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label asp-for="Surname">Surname</label>
            <span asp-validation-for="Surname" class="text-danger"></span>
            <input class="form-control" asp-for="Surname" />
        </div>
        <div class="mb-3">
            <label asp-for="BirthDate">Birthdate</label>
            <span asp-validation-for="BirthDate" class="text-danger"></span>
            <input class="form-control" asp-for="BirthDate" />
        </div>
        @*<div class="mb-3">
            <label asp-for="gender">Gender</label>
            <select class="form-control mt-2" asp-for="gender" asp-items="Html.GetEnumSelectList<UserModel.Gender>()"></select>
        </div>*@
        <div class="mb-3">
            <label asp-for="Login">Login</label>
            <span asp-validation-for="Login" class="text-danger"></span>
            <input class="form-control" asp-for="Login" />
        </div>
        <div class="mb-3">
            <label asp-for="Email">Mail</label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmEmail">Confirm email</label>
            <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
            <input class="form-control" asp-for="ConfirmEmail" />
        </div>
        <div class="mb-3">
            <label asp-for="Phone">Phone</label>
            <span asp-validation-for="Phone" class="text-danger"></span>
            <input class="form-control" asp-for="Phone" />
        </div>
        <div class="mb-3">
            <label asp-for="Pass">Password</label>
            <span asp-validation-for="Pass" class="text-danger"></span>
            <input class="form-control" asp-for="Pass" />
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPass">Confirm password</label>
            <span asp-validation-for="ConfirmPass" class="text-danger"></span>
            <input class="form-control" asp-for="ConfirmPass" />
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>